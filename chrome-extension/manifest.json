{
  "manifest_version": 3,
  "name": "White Wave Player",
  "version": "1.0",
  "description": "Play your saved White Wave mixes right from your browser",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://whitewave.ulrichraab.eu/*",
    "*://localhost/*"
  ],
  "web_accessible_resources": [{
    "resources": ["sounds/*.mp3"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon-96x96.png",
      "48": "images/favicon-96x96.png",
      "128": "images/favicon-96x96.png"
    }
  },
  "icons": {
    "16": "images/favicon-96x96.png",
    "48": "images/favicon-96x96.png",
    "128": "images/favicon-96x96.png"
  }
} 