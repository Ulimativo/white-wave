{
  "manifest_version": 3,
  "name": "White Wave Player",
  "version": "1.1.0",
  "description": "Quick access to your favorite White Wave sounds",
  "minimum_chrome_version": "109",
  "permissions": [
    "storage",
    "offscreen",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon-96x96.png",
      "48": "images/favicon-96x96.png",
      "128": "images/favicon-96x96.png"
    }
  },
  "icons": {
    "16": "images/favicon-96x96.png",
    "48": "images/favicon-96x96.png",
    "128": "images/favicon-96x96.png"
  }
} 
